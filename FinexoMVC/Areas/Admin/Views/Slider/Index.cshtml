@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using FinexoMVC.Models
@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Slider</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th colspan="2" scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><a asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Edit</a></td>
                    <td><a asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
            
        </tbody>
    </table>

</div>

